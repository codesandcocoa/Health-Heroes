<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/doctor_bg2"
    >
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health  Files"
        android:fontFamily="@font/billabong"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"

        />
    <TextView
        android:id="@+id/desc_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:text="A collection of your medical records"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_layout_1"
        android:backgroundTint="@android:color/white"
        android:text="Sign Up"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:layout_below="@id/desc_txt_1"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/login_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_layout_1"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:text="Login"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_below="@id/signup_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>